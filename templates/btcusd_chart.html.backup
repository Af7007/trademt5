            <!-- RSI Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <span>üìâ RSI (Relative Strength Index)</span>
                    <span style="font-size: 0.85em;">Overbought: >70 | Oversold: <30</span>
                </div>
                <div id="rsiChart"></div>
            </div>

            <!-- MACD Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <span>üìä MACD (Moving Average Convergence Divergence)</span>
                </div>
                <div id="macdChart"></div>
            </div>

            <!-- Positions and Trading Overview -->
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; margin: 20px 0;">
                <div class="stat-card">
                    <div class="stat-label">Posi√ß√µes Abertas</div>
                    <div class="stat-value" id="open-positions-display">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Lucro/Preju√≠zo do Dia</div>
                    <div class="stat-value neutral" id="day-profit">$0.00</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Total de Opera√ß√µes</div>
                    <div class="stat-value neutral" id="day-trades">0</div>
                </div>
            </div>

            <!-- Tabela de Posi√ß√µes Abertas -->
            <div class="chart-container">
                <h3 style="margin-bottom: 15px; color: #ffcd3c;">üìä Posi√ß√µes Abertas</h3>
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
