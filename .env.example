# Application Settings
APP_NAME=MetaTrader5 API
APP_VERSION=2.0.0
DEBUG=False
HOST=0.0.0.0
MT5_API_PORT=5001

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-key
API_KEY=your-api-key-here

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# MT5 Connection (optional - for auto-login)
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=
MT5_TIMEOUT=60000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Scalping Bot Configuration
ENABLE_SCALPING_BOT=false
SCALPING_SYMBOL=BTCUSDc
SCALPING_TIMEFRAME=M5
SCALPING_CONFIDENCE_THRESHOLD=85
SCALPING_VOLUME=0.01
SCALPING_INTERVAL=60

# Traefik/Domain Configuration (for production)
VNC_DOMAIN=vnc.mt5.yourdomain.com
API_DOMAIN=api.mt5.yourdomain.com
TRAEFIK_DOMAIN=traefik.yourdomain.com
DJANGO_DOMAIN=django.yourdomain.com
GRAFANA_DOMAIN=grafana.yourdomain.com
